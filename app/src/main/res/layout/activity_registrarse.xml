<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_registrarse"
    android:background="@color/gunmetal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity_login"
        tools:layout_editor_absoluteX="-81dp"
        tools:layout_editor_absoluteY="-90dp">

        <TextView
            android:id="@+id/Text_view_cuenta_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginEnd="140dp"
            android:layout_marginBottom="28dp"
            android:text="@string/ya_tiene_cuenta"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/Text_view_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="94dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="92dp"
            android:text="Geek for Games"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Edit_text_registro_usuario"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginStart="102dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="100dp"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/nombre_de_usuario"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_sky_blue"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/edit_text_registro_correo"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginStart="102dp"
            android:layout_marginTop="272dp"
            android:layout_marginEnd="100dp"
            android:drawableStart="@drawable/email"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_sky_blue"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/Edit_text_login_contra"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginStart="102dp"
            android:layout_marginTop="332dp"
            android:layout_marginEnd="100dp"
            android:drawableStart="@drawable/info"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:password="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_sky_blue"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/Edit_text_registro_contra_verificar"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginStart="102dp"
            android:layout_marginTop="396dp"
            android:layout_marginEnd="100dp"
            android:drawableStart="@drawable/info"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Verificar contraseña"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:password="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_sky_blue"
            android:textColorHint="@color/white"/>

        <Button
            android:id="@+id/Button_login"
            android:layout_width="186dp"
            android:layout_height="63dp"
            android:layout_marginStart="114dp"
            android:layout_marginEnd="112dp"
            android:layout_marginBottom="192dp"
            android:text="Crear cuenta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Edit_text_registro_contra_verificar"
            android:theme="@style/Button.azul"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>